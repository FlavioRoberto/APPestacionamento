<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.appestacionamento.cursoandroid.admin.appestacionamento.Activity.Activity.Secretaria.SecretariaActivity">

    <include android:id="@+id/toolbarId"
        layout="@layout/toolbar" />

    <com.appestacionamento.cursoandroid.admin.appestacionamento.Activity.Helper.SlidingTabLayout
        android:id="@+id/stl_secretaria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.appestacionamento.cursoandroid.admin.appestacionamento.Activity.Helper.SlidingTabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_secretaria"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </android.support.v4.view.ViewPager>
</LinearLayout>
