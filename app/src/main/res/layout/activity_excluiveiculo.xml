<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="20dp"
    android:weightSum="1">


    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="43dp"
        android:ems="10"
        android:gravity="center"
        android:background="@drawable/ovaltext"
        android:inputType="textPersonName"
        android:hint="Informe email"
        android:textColorHint="@color/colorPrimary"
        android:layout_marginStart="52dp"

        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/btnbuscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ovalbutton"
        app:srcCompat="@drawable/ic_search"
        android:layout_alignBottom="@+id/editText3"
        android:layout_toEndOf="@+id/editText3" />


    <view

        android:layout_marginTop="5dp"
        android:layout_width="290dp"
        android:layout_height="1dp"
        android:background="@drawable/ovalbarra"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textdados"
        android:id="@+id/view" />

    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/textdados"
        android:textColor="@color/barra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DADOS"
        android:layout_below="@+id/btnbuscar"
        android:layout_centerHorizontal="true" />

</RelativeLayout>