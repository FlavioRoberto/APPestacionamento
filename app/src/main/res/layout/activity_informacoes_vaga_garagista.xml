<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include android:id="@+id/toolbarId"
        layout="@layout/toolbar" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Dados VeÃ­culo"
        android:textAlignment="center"
        android:textSize="@dimen/TextSize" />

    <view
        android:id="@+id/BarraId"
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:layout_below="@+id/TextView21"
        android:layout_gravity="center"
        android:background="#ccc"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/Numerovagaid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Numeovaga"
                android:textSize="@dimen/TextSize"
                />

            <TextView
                android:id="@+id/tv_numero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/TextSize"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/setorvagaid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/Setor"
                android:textSize="@dimen/TextSize"
                />

            <TextView
                android:id="@+id/tv_setor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text=""
                android:textSize="@dimen/TextSize" />

            <TextView
                android:id="@+id/statusvagaid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Status"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/TextSize"/>

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/TextSize"
                android:layout_marginTop="5dp"
                />


           <TextView
                android:id="@+id/testPlaca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Placa"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/TextSize"/>

            <TextView
                android:id="@+id/tv_Placa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/TextSize"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/textVagaEspecial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vaga Especial?"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/TextSize"/>

            <TextView
                android:id="@+id/tv_vagaEspecial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/TextSize"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/texteEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email do proprietario"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/TextSize"/>

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/TextSize"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>
    </ScrollView>


</LinearLayout>