<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/Nomeid_editadado"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="@string/nome"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="25dp"
        android:textSize="15sp"
        />

    <EditText
        android:id="@+id/editNomeid_editadado"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:background="@drawable/ovaltext"
        android:layout_gravity="center"
        android:textColor="#000000"

        />

    <TextView
        android:id="@+id/Telefoneid_editadado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/telefone"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="25dp"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/editTelefoneid_editadado"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        android:background="@drawable/ovaltext"
        android:layout_gravity="center"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/Tipoid_editadados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Tipo"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="25dp"
        android:textSize="15sp"
        />

    <EditText
        android:id="@+id/editTipo_editadados"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:background="@drawable/ovaltext"
        android:layout_gravity="center"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/cpf_editadados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Cpf"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="25dp"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/editText5"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:background="@drawable/ovaltext"
        android:layout_gravity="center"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/Statusid_editadados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Status"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="25dp"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/InativarP"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="10dp"
        android:textSize="15sp"/>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Inativar"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:textSize="15sp"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/Atualizar"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/ovalbutton"/>

</LinearLayout>