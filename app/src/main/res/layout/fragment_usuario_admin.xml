<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    android:padding="35dp"

    tools:context="com.appestacionamento.cursoandroid.admin.appestacionamento.Activity.Fragments.usuarioAdmin">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        >


        <ImageView
            android:id="@+id/cadastroId"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/ic_person_add"
            android:background="@drawable/ovaltext_busca"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:text="@string/adicionarUsuario"
            android:layout_alignBaseline="@+id/textView8"
            android:layout_alignBottom="@+id/textView8"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/cadastroId" />

        <ImageView
            android:id="@+id/removeId"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:background="@drawable/ovaltext_busca"
            app:srcCompat="@drawable/ic_person_outline"
            android:layout_alignTop="@+id/cadastroId"
            android:layout_alignStart="@+id/inativaId" />

        <TextView
            android:id="@+id/textView8"
            android:padding="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:text="@string/removerUsuario"
            android:layout_below="@+id/removeId"
            android:layout_alignStart="@+id/removeId"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:id="@+id/consultaId"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:background="@drawable/ovaltext_busca"
            app:srcCompat="@drawable/ic_search"
            android:layout_marginTop="60dp"
            android:layout_below="@+id/textView8"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textView9"
            android:padding="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:text="@string/consultaUsuario"
            android:layout_below="@+id/consultaId"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/consultaId" />

        <ImageView
            android:id="@+id/inativaId"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:background="@drawable/ovaltext_busca"
            app:srcCompat="@drawable/ic_remove_circle_outline"
            android:layout_alignTop="@+id/consultaId"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/textView10"
            android:padding="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:text="@string/inativaUsuario"
            android:layout_below="@+id/inativaId"
            android:layout_alignStart="@+id/inativaId"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</FrameLayout>
