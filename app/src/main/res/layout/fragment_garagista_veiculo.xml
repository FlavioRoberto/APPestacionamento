<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    >



    <ScrollView
        android:padding="10dp"
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >


                <EditText
                    android:id="@+id/editConsulta_Id"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_height="45dp"
                    android:layout_alignStart="@+id/viewbarra"
                    android:textColor="@color/colorPrimary"
                    android:layout_toStartOf="@+id/btnbuscar"
                    android:background="@drawable/ovaltext"
                    android:ems="10"
                    android:gravity="center"

                    android:hint="email do proprietÃ¡rio"
                    android:inputType="textPersonName"
                    android:textColorHint="@color/colorPrimary" />

                <ImageView
                    android:id="@+id/btnbuscar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ovalbutton"
                    app:srcCompat="@drawable/ic_search"
                    android:layout_alignTop="@+id/editConsultaId"
                    android:layout_alignEnd="@+id/viewbarra" />


                <TextView
                    android:id="@+id/textdados"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btnbuscar"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:text="DADOS"
                    android:textColor="#ccc" />

                <View

                    android:id="@+id/viewbarra"
                    android:layout_width="270dp"
                    android:layout_height="1dp"
                    android:layout_below="@+id/textdados"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="5dp"
                    android:background="#ccc" />

            </RelativeLayout>

            <ScrollView
                android:id="@+id/scrollView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp">

                <LinearLayout
                    android:id="@+id/linearid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/placa_veiculoid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/placaVeiculo"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/texxtViewSize" />

                    <TextView
                        android:id="@+id/textovalor_placaId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text=""
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/texxtViewSize" />


                    <TextView
                        android:id="@+id/textmodelo_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="@string/modeloVeiculo"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/texxtViewSize" />

                    <TextView
                        android:id="@+id/valormodelo_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text=""
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/texxtViewSize" />

                    <TextView
                        android:id="@+id/textmarca_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="@string/marcaVeiculo"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/texxtViewSize" />

                    <TextView
                        android:id="@+id/valormarca_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text=""
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/texxtViewSize" />

                    <TextView
                        android:id="@+id/textcor_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="@string/corVeiculo"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/texxtViewSize" />

                    <TextView
                        android:id="@+id/valorcor_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text=""
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/texxtViewSize" />


                </LinearLayout>

            </ScrollView>





        </LinearLayout>
    </ScrollView>
</LinearLayout>


